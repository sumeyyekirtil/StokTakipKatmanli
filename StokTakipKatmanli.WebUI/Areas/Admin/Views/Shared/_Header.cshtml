@*
    Layout shared kod birikmesini engellemek için header ayrıldı
*@
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Main" asp-action="Index">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Sliders" asp-action="Index">Slider Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Brands" asp-action="Index">Marka Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Categories" asp-action="Index">Kategori Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Index">Ürün Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="ProductImages" asp-action="Index">Ürün Resim Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">Kullanıcı Yönetimi</a>
                    </li>
                </ul>
            </div>
            <a class="btn btn-outline-info me-3" href="/" target="_blank">Siteyi İncele <i class="bi bi-power"></i></a> @*blank ile siteden çıkış yapmaz*@
            <a class="btn btn-danger" asp-area="" asp-controller="Account" asp-action="Logout">Oturumu Kapat<i class="bi bi-power"></i></a>@*asp-area="" : kullanılmazsa admin döner*@
        </div>
    </nav>
</header>
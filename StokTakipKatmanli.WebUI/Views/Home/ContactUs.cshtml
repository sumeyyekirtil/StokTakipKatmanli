@*
   İletişim için view - bootstrap iletişim kullanıldı
*@
@{
    ViewData["Title"] = "İletişim";
}

<h1 class="display-5 text-center mb-3">
    Bize ulaşın
</h1>

<div class="container-fluid px-5 my-5">
    <div class="row justify-content-center">
        <div class="col-xl-12">
            <div class="card border-0 rounded-3 shadow-lg overflow-hidden">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-sm-6 d-none d-sm-block bg-image">
                        </div>
                        <div class="col-sm-6 p-4">
                            <div class="text-center">
                                <div class="h3 fw-light">İletişim Formu</div>
                                <p class="mb-4 text-muted">Formu doldurarak bize ulaşabilirsiniz</p>
                            </div>

                            <!-- * * * * * * * * * * * * * *
                            // * * SB Forms Contact Form * *
                            // * * * * * * * * * * * * * * *

                            // This form is pre-integrated with SB Forms.
                            // To make this form functional, sign up at
                            // https://startbootstrap.com/solution/contact-forms
                            // to get an API token!
                            -->

                            <form id="contactForm" asp-action="ContactUs">

                                <!-- Name Input -->
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="nameSurname" type="text" placeholder="Ad Soyad" data-sb-validations="required" required />
                                    <label for="name">Ad Soyad</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">Ad gereklidir.</div>
                                </div>

                                <!-- Email Input -->
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="email" type="email" placeholder="Email" data-sb-validations="required,email" required />
                                    <label for="emailAddress">Email</label>
                                    <div class="invalid-feedback" data-sb-feedback="emailAddress:required">Email gereklidir.</div>
                                    <div class="invalid-feedback" data-sb-feedback="emailAddress:email">Email Address Email is not valid.</div>
                                </div>

                                <!-- Message Input -->
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" id="message" name="message" type="text" placeholder="Mesaj" style="height: 10rem;" data-sb-validations="required" required></textarea>
                                    <label for="message">Mesaj</label>
                                    <div class="invalid-feedback" data-sb-feedback="message:required">Mesaj gereklidir</div>
                                </div>

                                <!-- Submit success message -->
                                <div class="d-none" id="submitSuccessMessage">
                                    <div class="text-center mb-3">
                                        <div class="fw-bolder">Form Gönderildi!</div>
                                    </div>
                                </div>

                                <!-- Submit error message -->
                                <div class="d-none" id="submitErrorMessage">
                                    <div class="text-center text-danger mb-3">Mesaj Gönderilemedi!</div>
                                </div>

                                <!-- Submit button -->
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Gönder</button>
                                </div>
                            </form>
                            <!-- End of contact form -->

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- CDN Link to SB Forms Scripts -->
<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>

@model HomePageViewModel
@*bir view de iki model kullanımını yeni model oluşturulup import edildi*@

@{
    ViewData["Title"] = "Anasayfa";
}
@*bootstrap kullanıldı - category den alınan slider için*@
<div id="carouselExampleAutoplaying" class="carousel slide carousel-fade" data-bs-ride="carousel"> @*data-bs-ride : kaymayı otomatik başlatır*@
    <div class="carousel-inner">

        @foreach (var item in Model.Sliders)
        {
            <div class="carousel-item @(item == Model.Sliders.FirstOrDefault() ? "active" : "")"> @*active hepsi olmasın diye şarta bağlandı*@
                <img src="~/Images/@item.Image" class="d-block w-100" alt="..." class="img-fluid">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@item.Title</h5>
                    <p>@item.Description</p>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Geri</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">İleri</span>
    </button>
</div>

<h1 class="display-4 text-center mt-5">
    Ürünlerimiz
</h1>
<div class="row row-cols-3">
    @foreach (var item in Model.Products)
    {
        <div class="col">
            <a href="/Products/Detail/@item.Id">
                <img src="~/Images/@item.Image" alt="@item.Name" class="img-fluid" />

                <h3>@item.Name</h3>
            </a>
        </div>
    }
</div>

<partial name="_Products" model="Model.Products" />
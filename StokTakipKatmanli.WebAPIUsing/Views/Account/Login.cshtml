@model UserLoginModel
@*
    Account - login işlemi - bootstrap ile
*@

@{
    ViewData["Title"] = "Giriş Yap";
}


<style>
    html,
    body {
        height: 100%;
    }

    .form-signin {
        max-width: 330px;
        padding: 1rem;
    }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

</style>

<main class="d-flex align-items-center py-4 bg-body-tertiary">
    <form asp-action="Login" class="form-signin col-lg-4 m-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Lütfen Giriş Yapınız</h1>
        <div class="form-floating">
            <input class="form-control" required asp-for="Email" placeholder="Email">
            <label for="Email">Email</label>
        </div>
        <div class="form-floating">
            <input type="password" asp-for="Password" class="form-control" required placeholder="Password">
            <label for="Password">Şifre</label>
        </div>
        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" name="rememberme" value="remember-me" id="checkDefault">
            <label class="form-check-label" for="checkDefault">
                Beni Hatırla
            </label>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
    </form>
</main>
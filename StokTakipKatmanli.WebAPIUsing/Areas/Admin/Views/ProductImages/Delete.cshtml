@model StokTakipKatmanli.Core.Entities.ProductImage

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Kaydı silmek istiyor musunuz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <img src="/Images/@Html.DisplayFor(model => model.Name)" alt="Alternate Text" height="118" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri Dön</a>
    </form>
</div>
